<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:id="@+id/activity1"
        android:text="ACTIVITY1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity1"
        android:layout_marginLeft="130dp"
        android:text="ACTIVITY2"
        android:id="@+id/activity2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity2"
        android:id="@+id/activity3"
        android:text="ACTIVITY3"
        android:layout_marginLeft="130dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity4"
        android:layout_below="@id/activity3"
        android:layout_marginLeft="130dp"
        android:text="ACTIVITY4"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_below="@id/activity4"
        android:layout_marginLeft="80dp"
        android:id="@+id/salir"/>

</RelativeLayout>
